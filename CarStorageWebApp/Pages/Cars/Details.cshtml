@page "{id:int?}"
@model CarStorageWebApp.Pages.Cars.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/@(nameof(CarStorageWebApp)).styles.css" />

<h1 class="details-header">Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 row-element">
            @Html.DisplayNameFor(model => model.Car.Brand)
        </dt>
        <dd class="col-sm-10 row-element">
            @Html.DisplayFor(model => model.Car.Brand)
        </dd>
        <dt class="col-sm-2 row-element">
            @Html.DisplayNameFor(model => model.Car.Model)
        </dt>
        <dd class="col-sm-10 row-element">
            @Html.DisplayFor(model => model.Car.Model)
        </dd>
        <dt class="col-sm-2 row-element">
            @Html.DisplayNameFor(model => model.Car.Description)
        </dt>
        <dd class="col-sm-10 row-element">
            @Html.DisplayFor(model => model.Car.Description)
        </dd>
        <dt class="col-sm-2 row-element">
            @Html.DisplayNameFor(model => model.Car.YearOfManufacturing)
        </dt>
        <dd class="col-sm-10 row-element">
            @Html.DisplayFor(model => model.Car.YearOfManufacturing)
        </dd>
        <dt class="col-sm-2 row-element">
            @Html.DisplayNameFor(model => model.Car.Price)
        </dt>
        <dd class="col-sm-10 row-element">
            @Html.DisplayFor(model => model.Car.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Car?.ID" style="text-decoration: none; color: teal;">Edit</a> |
